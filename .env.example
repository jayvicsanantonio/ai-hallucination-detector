# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/certaintyai
DATABASE_POOL_SIZE=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# API Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
API_RATE_LIMIT=1000

# External Services
KNOWLEDGE_BASE_API_URL=https://api.knowledgebase.com
KNOWLEDGE_BASE_API_KEY=your-api-key

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# File Upload
MAX_FILE_SIZE=50mb
UPLOAD_PATH=./uploads

# Performance
CACHE_TTL_SECONDS=3600
MAX_PROCESSING_TIME_SECONDS=300
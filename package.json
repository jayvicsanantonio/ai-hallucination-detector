{
  "name": "certaintyai",
  "version": "1.0.0",
  "description": "Enterprise AI hallucination detection system",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@certaintyai/backend",
    "dev:backend": "npm run dev --workspace=@certaintyai/backend",
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace=@certaintyai/backend",
    "start": "npm run start --workspace=@certaintyai/backend",
    "test": "npm run test --workspaces",
    "test:backend": "npm run test --workspace=@certaintyai/backend",
    "test:unit": "npm run test:unit --workspaces",
    "test:integration": "npm run test:integration --workspaces",
    "test:e2e": "npm run test:e2e --workspaces",
    "test:coverage": "npm run test:coverage --workspaces",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "clean": "rm -rf packages/*/dist packages/*/node_modules"
  },
  "keywords": [
    "ai",
    "hallucination",
    "detection",
    "enterprise",
    "compliance"
  ],
  "author": "CertaintyAI Team",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
